<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/top_bg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_half"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar"/>

    <ImageView
        android:id="@+id/mine_head"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/top_bg"
        app:layout_constraintRight_toRightOf="@+id/top_bg"
        app:layout_constraintBottom_toBottomOf="@+id/top_bg"
        app:layout_constraintLeft_toLeftOf="@+id/top_bg"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitCenter"
        app:layout_constraintHeight_percent="0.144"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.47"/>

    <TextView
        android:id="@+id/mine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="杨启航"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@+id/top_bg"
        app:layout_constraintRight_toRightOf="@+id/top_bg"
        app:layout_constraintBottom_toBottomOf="@+id/top_bg"
        app:layout_constraintLeft_toLeftOf="@+id/top_bg"
        app:layout_constraintVertical_bias="0.75"
        />
    <TextView
        android:id="@+id/mine_apartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="技术创新部"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/mine_name"
        app:layout_constraintRight_toRightOf="@+id/top_bg"
        app:layout_constraintBottom_toBottomOf="@+id/top_bg"
        app:layout_constraintLeft_toLeftOf="@+id/top_bg"
        app:layout_constraintVertical_bias="0.27"
        />


    <TextView
        android:id="@+id/mine_company"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.075"
        app:layout_constraintTop_toBottomOf="@+id/top_bg"
        android:textSize="15sp"
        android:textColor="@color/text_dark"
        android:text="企业信息查询"
        android:drawableLeft="@mipmap/mine_company"
        android:drawablePadding="15dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        app:layout_constraintWidth_percent="0.87"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/line_company"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#FFB7BEC5"
        app:layout_constraintLeft_toLeftOf="@+id/mine_company"
        app:layout_constraintRight_toRightOf="@+id/mine_company"
        app:layout_constraintTop_toBottomOf="@+id/mine_company"/>
    <TextView
        android:id="@+id/mine_short_msg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/line_company"
        android:textSize="15sp"
        android:textColor="@color/text_dark"
        android:text="短信平台"
        android:drawableLeft="@mipmap/mine_short_msg"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        app:layout_constraintHeight_percent="0.075"
        app:layout_constraintLeft_toLeftOf="@+id/line_company"
        app:layout_constraintRight_toRightOf="@+id/line_company"/>

    <View
        android:id="@+id/line_short"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#FFB7BEC5"
        app:layout_constraintLeft_toLeftOf="@+id/mine_short_msg"
        app:layout_constraintRight_toRightOf="@+id/mine_short_msg"
        app:layout_constraintTop_toBottomOf="@+id/mine_short_msg"/>

    <TextView
        android:id="@+id/mine_system_safe"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/line_short"
        app:layout_constraintBottom_toTopOf="@+id/line_safe"
        android:textSize="15sp"
        android:textColor="@color/text_dark"
        android:text="企业信息查询"
        android:drawableLeft="@mipmap/mine_system_safe"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        app:layout_constraintHeight_percent="0.075"
        app:layout_constraintLeft_toLeftOf="@+id/mine_company"
        app:layout_constraintRight_toRightOf="@+id/mine_company"/>

    <View
        android:id="@+id/line_safe"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#FFB7BEC5"
        app:layout_constraintLeft_toLeftOf="@+id/mine_company"
        app:layout_constraintRight_toRightOf="@+id/mine_company"
        app:layout_constraintTop_toBottomOf="@+id/mine_system_safe"/>

    <Button
        android:id="@+id/mine_exit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/shape_login_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_safe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.72"
        app:layout_constraintVertical_bias="0.34"
        />
</android.support.constraint.ConstraintLayout>
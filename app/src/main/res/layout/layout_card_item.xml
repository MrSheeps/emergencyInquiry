<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/duty_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018-05-21(周一)"
        android:textColor="@color/text_card"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/duty_name"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/duty_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="杨启航"
        android:textColor="@color/text_card"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/duty_phone"
        app:layout_constraintLeft_toRightOf="@+id/duty_date"
        app:layout_constraintRight_toLeftOf="@+id/duty_phone" />

    <TextView
        android:id="@+id/duty_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15626535234"
        android:textColor="@color/text_card"
        android:textSize="14sp"
        android:textIsSelectable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/duty_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>